<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/operate_in"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/all_round"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/ldrq_action"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="录单日期:"
            android:textColor="#000000"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/ldrq_edit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="100dp"
            android:gravity="center_vertical"
            android:textColor="#0000ff"
            android:textSize="17dp" />
        <ImageView
            android:layout_width="6dip"
            android:layout_height="12dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:src="@drawable/home_index_arrow" />
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#cccccc" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="录单编号:"
            android:textColor="#000000"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/ldbh_edit"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/edit_style"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:textColor="#0000ff"
            android:textSize="17dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/wldw_action"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="往来单位:"
            android:textColor="#000000"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/wldw_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_style"
            android:textColor="#0000ff"
            android:textSize="17dp" 
            android:focusableInTouchMode="true"
            />
        <ImageView
            android:id="@+id/dw_add"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:src="@drawable/search" />
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#cccccc" />
    <RelativeLayout
        android:id="@+id/jsr_action"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="经手人:"
            android:textColor="#000000"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/jsr_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_style"
            android:textColor="#0000ff"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/jsr_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:src="@drawable/search" />
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:visibility="gone"
        android:background="#cccccc" />
    <RelativeLayout
        android:id="@+id/bm_action"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="部门:"
            android:textColor="#000000"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/bm_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_style"
            android:textColor="#0000ff"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/bm_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:src="@drawable/search" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/ck_action"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="收货仓库:"
            android:textColor="#000000"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/shck_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_style"
            android:textColor="#0000ff"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/ck_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:src="@drawable/search" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="摘要:"
            android:textColor="#000000"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/zy_edit"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/edit_style"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:textColor="#0000ff"
            android:textSize="17dp" />
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#cccccc" />
    <RelativeLayout
        android:id="@+id/dhrq_action"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="到货日期:"
            android:textColor="#000000"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/dhrq_edit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="100dp"
            android:gravity="center_vertical"
            android:textColor="#0000ff"
            android:textSize="17dp" />
        <ImageView
            android:id="@+id/dhrq_add"
            android:layout_width="6dip"
            android:layout_height="12dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:src="@drawable/home_index_arrow" />
    </RelativeLayout>
</LinearLayout>
</LinearLayout>