<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:minWidth="900dp"
    android:layout_height="48dp"
    android:orientation="horizontal" 
    android:gravity="center_vertical"
    android:id="@+id/baobiao_xshz_title"
    >
    <TextView 
        android:id="@+id/personCode"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="商品编号"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/fullName"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="2"
        android:text="商品全名"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/num"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="销售数量"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/price"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1.5"
        android:text="销售均价"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/amountBefore"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="折前金额"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/amount"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="销售金额"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/unitl"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="基本单位"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/fz_num"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1.5"
        android:text="辅助数量"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/standard"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="规格"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/type"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="型号"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/area"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="产地"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c1"
        />
	<ImageView 
   	    android:layout_width="6dip"
      	android:layout_height="12dip"
       	android:layout_marginRight="15dip"
       	android:src="@drawable/right_arrow"
       	android:id="@+id/right_arrow"
       	android:visibility="invisible"
   	    />
</LinearLayout>
