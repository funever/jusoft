<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:background="@drawable/all_round"
        >
       <RelativeLayout
        android:id="@+id/ck_action"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="自定义信息1:"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:id="@+id/title1"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/cp_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/title1"
            android:background="@drawable/edit_style"
            android:textColor="#0000ff"
            android:layout_marginRight="5dp"
            android:enabled="false"
            android:paddingLeft="8dp"
            android:textSize="17dp" />
    </RelativeLayout>
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            />
        <RelativeLayout 
           	android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            >
	    	 <TextView 
	        android:text="自定义信息2:"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical"
	        android:textColor="#000000"
	        android:textSize="16dp"
            android:id="@+id/title2"
	        android:layout_marginLeft="10dp"
	        />
	    	<EditText 
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:id="@+id/cp_tel"
	        android:textColor="#0000ff"
	        android:textSize="17dp"
	        android:background="@drawable/edit_style"
	        android:layout_marginRight="5dp"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/title2"
	        android:enabled="false"
	        android:paddingLeft="8dp"
	        />
	    </RelativeLayout>
	    <TextView 
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            />
        <RelativeLayout 
           	android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp"
            >
	    	 <TextView 
	        android:text="自定义信息3:"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center_horizontal"
	        android:textColor="#000000"
	        android:textSize="16dp"
	        android:layout_marginLeft="10dp"
            android:id="@+id/title3"
	        android:paddingTop="10dp"
	        />
	    	<EditText 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:id="@+id/cp_address"
	        android:textColor="#0000ff"
	        android:textSize="17dp"
	        android:background="@drawable/edit_style"
	        android:layout_marginRight="5dp"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/title3"
	        android:enabled="false"
	        android:gravity="left|top"
	        android:paddingLeft="8dp"
	        android:paddingTop="10dp"
	        />
	    </RelativeLayout>
        </LinearLayout>
</LinearLayout>
