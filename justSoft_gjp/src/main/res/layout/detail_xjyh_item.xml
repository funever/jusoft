<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:minWidth="900dp"
    android:layout_height="48dp"
    android:orientation="horizontal"
	android:id="@+id/detail_xjyh_item">
    <TextView 
        android:id="@+id/dj_type"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="单据类型"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/dj_no"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="fill_parent"
        android:text="单据编号"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/dj_date"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="fill_parent"
        android:text="日期"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/dj_zybh"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="职员编号"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/dj_zyqm"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="职员全名"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/dj_kmbh"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="科目编号"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/dj_kmqm"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="科目全名"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/dj_zjje"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="增加金额"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/dj_jsje"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="减少金额"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/dj_ye"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="余额"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/dj_zy"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="fill_parent"
        android:text="单据摘要"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c1"
        />
</LinearLayout>
