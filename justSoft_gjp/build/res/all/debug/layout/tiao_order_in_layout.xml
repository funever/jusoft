<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:background="@drawable/all_round"
        >
        <RelativeLayout 
           	android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            >
            <TextView 
	        android:text="订单编号:"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical"
	        android:textColor="#000000"
	        android:textSize="16dp"
	        />
	    	<EditText 
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:id="@+id/order_edit"
	        android:layout_marginLeft="100dp"
	        android:textColor="#0000ff"
	        android:textSize="17dp"
	        android:background="@drawable/edit_style"
	        android:layout_marginRight="5dp"
	        android:layout_centerVertical="true"
	        />
	    	<ImageView 
	    	    android:layout_width="30dip"
            	android:layout_height="30dip"
            	android:layout_alignParentRight="true"
            	android:layout_centerVertical="true"
            	android:src="@drawable/search"
	    	    android:id="@+id/or_add"
	    	    android:layout_marginRight="7dp"
	    	    android:visibility="gone"
	    	    />
        </RelativeLayout>
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            />
        <RelativeLayout 
           	android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:id="@+id/wldw_action"
            >
	    	 <TextView 
	        android:text="往来单位:"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical"
	        android:textColor="#000000"
	        android:textSize="16dp"
	        />
	    	<EditText 
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:id="@+id/wldw_edit"
	        android:layout_marginLeft="100dp"
	        android:textColor="#0000ff"
	        android:textSize="17dp"
	        android:background="@drawable/edit_style"
	        android:layout_marginRight="40dp"
	        android:layout_centerVertical="true"
	        />
	    	<ImageView 
	    	    android:layout_width="30dip"
            	android:layout_height="30dip"
            	android:layout_alignParentRight="true"
            	android:layout_centerVertical="true"
            	android:src="@drawable/search"
	    	    android:id="@+id/dw_add"
	    	    android:layout_marginRight="7dp"
	    	    />
	    </RelativeLayout>
	    <TextView 
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            />
	    <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:id="@+id/sdate_action"
            >
            <TextView 
	        android:text="开始日期:"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical"
	        android:textColor="#000000"
	        android:textSize="16dp"
	        />
	    	<TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:id="@+id/sdate_edit"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="100dp"
	        android:textColor="#0000ff"
	        android:textSize="17dp"
	        />
	    	<ImageView 
            	android:layout_width="6dip"
            	android:layout_height="12dip"
            	android:layout_alignParentRight="true"
           		android:layout_marginRight="15dip"
            	android:layout_centerVertical="true"
            	android:src="@drawable/home_index_arrow"/>
        </RelativeLayout>
	    <TextView 
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            />
	<RelativeLayout 
           	android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:id="@+id/edate_action"
            >
	    <TextView 
	        android:text="结束日期:"
	        android:textSize="16dp"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical"
	        android:textColor="#000000"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:id="@+id/edate_edit"
	        android:gravity="center_vertical"
	        android:textColor="#0000ff"
	        android:textSize="17dp"
	        android:layout_marginLeft="100dp"
	        />
	    <ImageView 
	    	    android:layout_width="6dip"
            	android:layout_height="12dip"
            	android:layout_alignParentRight="true"
           		android:layout_marginRight="15dip"
            	android:layout_centerVertical="true"
            	android:src="@drawable/home_index_arrow"
	    	    />
	</RelativeLayout>
    </LinearLayout>
    <Button 
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:background="@drawable/all_round"
        android:text="订单"
        android:textSize="17dp"
        android:id="@+id/search"
        />
</LinearLayout><!-- From: file:/E:/android_studio_workspace/jusoft/justSoft_gjp/src/main/res/layout/tiao_order_in_layout.xml -->