<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:minWidth="700dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:id="@+id/detail_wldw_item"
    >
    <TextView 
        android:id="@+id/bilType"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="单据类型"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/number"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="fill_parent"
        android:text="单据编号"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="fill_parent"
        android:text="日期"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/amountAdd"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="应收增加"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/amountDec"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="应收减少"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/amountYe"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="应收余额"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/summary"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="fill_parent"
        android:text="单据摘要"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:minHeight="45dp"
        android:background="@color/select_pro_c1"
        />
</LinearLayout>
