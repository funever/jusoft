<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bg"
    >
    <TextView 
        android:text="默认仓库和单位："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:background="@drawable/all_round"
        >
       <RelativeLayout
        android:id="@+id/ck_action"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" >
		<ImageView 
		    android:src="@drawable/clear"
		    android:layout_centerVertical="true"
		    android:id="@+id/clear_ck"
		    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
		    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/clear_ck"
            android:text="默认仓库:"
            android:textColor="#000000"
            android:id="@+id/ck_title"
            android:layout_marginLeft="10dp"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/ck_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ck_title"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_style"
            android:textColor="#0000ff"
            android:textSize="17dp" />
        <ImageView
            android:id="@+id/ck_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:src="@drawable/search" />
    </RelativeLayout>
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            />
        <RelativeLayout 
           	android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:id="@+id/wldw_action"
            >
        <ImageView 
		    android:src="@drawable/clear"
		    android:layout_centerVertical="true"
		    android:id="@+id/clear_dw"
		    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
		    />
	    	 <TextView 
	        android:text="往来单位:"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical"
	        android:textColor="#000000"
	        android:textSize="16dp"
	        android:layout_toRightOf="@id/clear_dw"
	        android:layout_marginLeft="10dp"
	        android:id="@+id/dw_title"
	        />
	    	<EditText 
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:id="@+id/wldw_edit"
	        android:textColor="#0000ff"
	        android:textSize="17dp"
	        android:background="@drawable/edit_style"
	        android:layout_marginRight="40dp"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/dw_title"
	        />
	    	<ImageView 
	    	    android:layout_width="30dip"
            	android:layout_height="30dip"
            	android:layout_alignParentRight="true"
            	android:layout_centerVertical="true"
            	android:src="@drawable/search"
	    	    android:id="@+id/dw_add"
	    	    android:layout_marginRight="7dp"
	    	    />
	    </RelativeLayout>
        </LinearLayout>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" 
            android:background="@drawable/button_del_round"
            android:id="@+id/submit"
            android:text="提交"
            android:textSize="20dp"
            >
        </Button>
        <TextView 
	        android:text="其他设置："
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/black"
	        android:textSize="17dp"
	        android:paddingTop="15dp"
	        android:paddingLeft="10dp"
	        />
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" 
            android:background="@drawable/all_round"
            >
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/scanner"
                >
                <TextView 
                    android:text="扫描器设置"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView 
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    />
            </RelativeLayout>
            <TextView 
                android:layout_width="match_parent"
                android:background="#d3d3d3"
                android:layout_height="1dp"
                />
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/painter"
                >
                <TextView 
                    android:text="打印机设置"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/painter_title"
                    />
                <TextView 
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#0000ff"
                    android:layout_marginRight="25dp"
                    android:textSize="15dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/show_ip_port"
                    />
                <ImageView 
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    />
            </RelativeLayout>
            <TextView 
                android:layout_width="match_parent"
                android:background="#d3d3d3"
                android:layout_height="1dp"
                />
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/menu_set"
                >
                <TextView 
                    android:text="菜单设置"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/menu_set_title"
                    />
                <ImageView 
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    />
            </RelativeLayout>
            <TextView 
                android:layout_width="match_parent"
                android:background="#d3d3d3"
                android:layout_height="1dp"
                />
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/company_info"
                >
                <TextView 
                    android:text="公司信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/menu_set_title"
                    />
                <ImageView 
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    />
            </RelativeLayout>
        </LinearLayout>
