<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/dialog_bg"
    >
    <TextView 
        android:background="@drawable/dialog_title_style"
        android:text="商品信息"
        android:textColor="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textSize="17dp"
        android:gravity="center"
        />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="15dp"
	    android:layout_marginTop="15dp"
	    android:layout_marginRight="15dp"
	    android:layout_marginBottom="15dp"
	    android:background="@drawable/all_round"
	    android:orientation="vertical"
	    >
	    <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="商品全名:"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000" />
                <TextView 
			        android:layout_width="match_parent"
			        android:layout_height="fill_parent"
			        android:id="@+id/pro_name"
			        android:textSize="17dp"
			        android:singleLine="true"
			        android:gravity="center_vertical"
			        android:layout_marginLeft="100dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginTop="3dp"
			        android:layout_marginBottom="3dp"
			        android:paddingLeft="3dp"
			        android:text="1"
			        />
            </RelativeLayout>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#d2d2d2"
                />
	    <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="规格:"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000" />
                <TextView 
			        android:layout_width="match_parent"
			        android:layout_height="fill_parent"
			        android:id="@+id/pro_guige"
			        android:textSize="17dp"
			        android:singleLine="true"
			        android:gravity="center_vertical"
			        android:layout_marginLeft="100dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginTop="3dp"
			        android:layout_marginBottom="3dp"
			        android:paddingLeft="3dp"
			        android:text="1"
			        />
            </RelativeLayout>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#d2d2d2"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="型号:"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000" />
                <TextView 
			        android:layout_width="match_parent"
			        android:layout_height="fill_parent"
			        android:id="@+id/pro_type"
			        android:textSize="17dp"
			        android:singleLine="true"
			        android:gravity="center_vertical"
			        android:layout_marginLeft="100dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginTop="3dp"
			        android:layout_marginBottom="3dp"
			        android:paddingLeft="3dp"
			        android:text="1"
			        />
            </RelativeLayout>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#d2d2d2"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="产地:"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000" />
                <TextView 
			        android:layout_width="match_parent"
			        android:layout_height="fill_parent"
			        android:id="@+id/pro_chandi"
			        android:textSize="17dp"
			        android:singleLine="true"
			        android:gravity="center_vertical"
			        android:layout_marginLeft="100dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginTop="3dp"
			        android:layout_marginBottom="3dp"
			        android:paddingLeft="3dp"
			        android:text="1"
			        />
            </RelativeLayout>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#d2d2d2"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="单位关系:"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000" />
                <TextView 
			        android:layout_width="match_parent"
			        android:layout_height="fill_parent"
			        android:id="@+id/pro_urate"
			        android:textSize="17dp"
			        android:singleLine="true"
			        android:gravity="center_vertical"
			        android:layout_marginLeft="100dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginTop="3dp"
			        android:layout_marginBottom="3dp"
			        android:paddingLeft="3dp"
			        android:text="1"
			        />
            </RelativeLayout>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#d2d2d2"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="当前库存:"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000" />
                <TextView 
			        android:layout_width="match_parent"
			        android:layout_height="fill_parent"
			        android:id="@+id/pro_kucun"
			        android:textSize="17dp"
			        android:singleLine="true"
			        android:gravity="center_vertical"
			        android:layout_marginLeft="100dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginTop="3dp"
			        android:layout_marginBottom="3dp"
			        android:paddingLeft="3dp"
			        android:text="1"
			        />
            </RelativeLayout>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#d2d2d2"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="虚拟库存:"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000" />
                <TextView 
			        android:layout_width="match_parent"
			        android:layout_height="fill_parent"
			        android:id="@+id/pro_void"
			        android:textSize="17dp"
			        android:singleLine="true"
			        android:gravity="center_vertical"
			        android:layout_marginLeft="100dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginTop="3dp"
			        android:layout_marginBottom="3dp"
			        android:paddingLeft="3dp"
			        android:text="1"
			        />
            </RelativeLayout>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:background="@drawable/dialog_buttom_style"
	    >
	    <Button 
	        android:text="替换"
	        android:layout_height="fill_parent"
	        android:layout_width="wrap_content"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:id="@+id/btn_replace"
	        />
	    <TextView 
	        android:background="#d2d2d2"
	        android:layout_width="1px"
	        android:layout_height="fill_parent"
	        />
	    <Button 
	        android:text="取消"
	        android:layout_height="fill_parent"
	        android:layout_width="wrap_content"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:id="@+id/btn_cancel"
	        />
	</LinearLayout>
</LinearLayout>
