<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:minWidth="900dp"
    android:layout_height="48dp"
    android:orientation="horizontal" 
    android:gravity="center_vertical"
    android:id="@+id/baobiao_jylc_title"
    >
    <TextView 
        android:id="@+id/date"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1.5"
        android:text="日期"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/nUMBER"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="2"
        android:text="单据编号"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/bilName"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="单据类型"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/num"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="数量"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/amount"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="金额"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/summary"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="2"
        android:text="摘要"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/eFullName"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="经办人"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/uFullName"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1.5"
        android:text="往来单位"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c2"
        />
	<TextView 
        android:id="@+id/dFullName"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="部门"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c1"
        />
	<TextView 
        android:id="@+id/memo"
        android:layout_width="0px"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="备注"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/select_pro_c2"
        />
	<ImageView 
   	    android:layout_width="6dip"
      	android:layout_height="12dip"
       	android:layout_marginRight="15dip"
       	android:src="@drawable/right_arrow"
       	android:id="@+id/right_arrow"
       	android:visibility="invisible"
   	    />
</LinearLayout>
