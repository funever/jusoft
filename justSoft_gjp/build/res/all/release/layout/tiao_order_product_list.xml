<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/add_product"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" 
            android:background="@drawable/all_round">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" >
                <TextView
                    android:id="@+id/sum_title"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量合计:"
                    android:textColor="#000000" 
                    android:layout_centerVertical="true"
                    />
                <TextView 
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#0000ff"
                    android:layout_toRightOf="@id/sum_title"
                    android:id="@+id/sum"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <TextView 
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" >
                <TextView
                    android:id="@+id/count_b_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="折前金额合计:"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/count_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:layout_toRightOf="@id/count_b_title"
                    android:textSize="16dp"
                    android:textColor="#0000ff" />
            </RelativeLayout>
            <TextView 
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" >
                <TextView
                    android:id="@+id/count_a_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="折后金额合计:"
                    android:textSize="16dp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/count_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:layout_toRightOf="@id/count_a_title"
                    android:textSize="16dp"
                    android:textColor="#0000ff" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" 
            android:background="@drawable/all_round">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="收款金额:"
                    android:textSize="16dp"
                    android:textColor="#000000" 
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/je"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="100dp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" 
                    android:background="@drawable/edit_style"
                    android:layout_marginRight="5dp"
                    android:numeric="decimal"
                    />
            </RelativeLayout>
            <TextView 
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" 
                android:id="@+id/fkzh_action"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="收款账户:"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/zh"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="100dp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" 
                    android:background="@drawable/edit_style"
                    android:layout_marginRight="40dp"
                    />
                <ImageView
                    android:layout_marginRight="7dp"
                    android:id="@+id/zh_add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
