<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical" 
    android:background="#dddddd">
    <CheckBox 
        android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
       	android:layout_alignParentLeft="true"
       	android:layout_centerVertical="true"
       	android:id="@+id/pro_check"
        />
    <TextView 
        android:layout_width="150dp"
        android:layout_height="fill_parent"
        android:textSize="16dp"
        android:paddingLeft="40dp"
        android:textColor="#555555"
   		android:layout_marginTop="10dp"
        android:id="@+id/pro_name"
        />
    <ImageView 
   	    android:layout_width="6dip"
      	android:layout_height="12dip"
       	android:layout_alignParentRight="true"
       	android:layout_marginRight="15dip"
       	android:layout_centerVertical="true"
       	android:src="@drawable/right_arrow"
       	android:id="@+id/right_arrow"
   	    />
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:id="@+id/danjia"
        android:layout_toLeftOf="@id/right_arrow"
        android:gravity="center_vertical|right"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品编号"
            android:textSize="17dp"
            android:textColor="@android:color/black"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textSize="17dp"
            android:textColor="#555555"
            android:id="@+id/pro_id"
            android:paddingTop="5dp"
            android:gravity="right"
            />
    </LinearLayout>
	<LinearLayout 
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/danjia"
        android:gravity="center_vertical|right"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规格"
            android:textSize="17dp"
            android:textColor="@android:color/black"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="17dp"
            android:textColor="#555555"
            android:id="@+id/pro_changdi"
            android:paddingTop="5dp"
            android:gravity="right"
            />
    </LinearLayout>
</RelativeLayout><!-- From: file:/E:/android_studio_workspace/jusoft/justSoft_gjp/src/main/res/layout/pro_search_list_item.xml -->