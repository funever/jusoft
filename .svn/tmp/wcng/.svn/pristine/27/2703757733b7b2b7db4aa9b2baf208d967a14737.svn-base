<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical" 
    android:background="#dddddd">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:id="@+id/content"
        android:layout_marginRight="25dp"
        android:gravity="center_vertical"
        >
        <TextView 
            android:text="title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title1"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            />
        <TextView 
            android:text="value1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title1"
            android:id="@+id/value1"
            android:textColor="#666666"
            android:textSize="16dp"
            android:singleLine="true"
            />
        <TextView
            android:text="title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title2"
            android:layout_below="@id/title1"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            />
        <TextView 
            android:text="value2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title2"
            android:layout_below="@id/value1"
            android:id="@+id/value2"
            android:textColor="#666666"
            android:textSize="16dp"
            android:singleLine="true"
            />
        <TextView
            android:text="title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title3"
            android:layout_toRightOf="@id/value1"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            />
        <TextView 
            android:text="value3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title3"
            android:id="@+id/value3"
            android:textColor="#666666"
            android:textSize="16dp"
            android:singleLine="true"
            />
        <TextView
            android:text="title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title4"
            android:layout_toRightOf="@id/value2"
            android:layout_below="@id/title3"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            />
        <TextView 
            android:text="value4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title4"
            android:layout_below="@id/value3"
            android:id="@+id/value4"
            android:textColor="#666666"
            android:textSize="16dp"
            android:singleLine="true"
            />
        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title5"
            android:layout_below="@id/title2"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            />
        <TextView 
            android:text=""
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title5"
            android:layout_below="@id/value2"
            android:id="@+id/value5"
            android:textColor="#666666"
            android:textSize="16dp"
            android:singleLine="true"
            />
    </RelativeLayout>
    <ImageView 
   	    android:layout_width="6dip"
      	android:layout_height="12dip"
       	android:layout_alignParentRight="true"
       	android:layout_marginRight="15dip"
       	android:layout_centerVertical="true"
       	android:src="@drawable/right_arrow"
       	android:id="@+id/right_arrow"
       	android:visibility="invisible"
   	    />
</RelativeLayout>