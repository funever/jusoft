<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    android:background="@drawable/dialog_bg"
    >
    <TextView 
        android:background="@drawable/dialog_title_style"
        android:text="商品数量与价格"
        android:textColor="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textSize="17dp"
        android:gravity="center"
        android:id="@+id/title"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/all_round"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/pro_info"
        >
        <RelativeLayout 
        	android:layout_width="match_parent"
        	android:layout_height="45dp"
       		 >
	        <TextView 
	            android:text="基本数量:"
	            android:textSize="15dp"
	            android:textColor="@android:color/black"
	            android:layout_width="100dp"
	            android:layout_height="fill_parent"
	            android:id="@+id/title_num"
	            android:layout_centerVertical="true"
	            android:gravity="center|right"
	            />
	        <EditText 
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:id="@+id/pro_num"
	            android:layout_toRightOf="@id/title_num"
	            android:textSize="15dp"
	            android:numeric="decimal"
	            android:background="@drawable/edit_style"
	            android:layout_centerVertical="true"
	            android:textColor="#0000aa"
	            android:paddingLeft="5dp"
	            android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	            />
	        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="1px"
	            android:background="@android:color/darker_gray"
	            android:layout_alignParentBottom="true"
	            />
    </RelativeLayout>
     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >
        <TextView 
            android:text="辅助数量1:"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="center|right"
            android:id="@+id/title_num"
            android:layout_centerVertical="true"
            />
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/pro_unit1"
            android:layout_toRightOf="@id/title_num"
            android:textSize="15dp"
            android:numeric="decimal"
            android:background="@drawable/edit_style"
            android:layout_centerVertical="true"
            android:textColor="#0000aa"
	            android:paddingLeft="5dp"
	            android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
            />
         <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="1px"
	            android:background="@android:color/darker_gray"
	            android:layout_alignParentBottom="true"
	            />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >
        <TextView 
            android:text="辅助数量2:"
            android:textColor="@android:color/black"
            android:textSize="15dp"
          	android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="right|center_vertical"
            android:id="@+id/title_num"
            android:layout_centerVertical="true"
            />
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/pro_unit2"
            android:layout_toRightOf="@id/title_num"
            android:textSize="15dp"
            android:numeric="decimal"
            android:background="@drawable/edit_style"
            android:layout_centerVertical="true"
            android:textColor="#0000aa"
	            android:paddingLeft="5dp"
	            android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
            />
        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="1px"
	            android:background="@android:color/darker_gray"
	            android:layout_alignParentBottom="true"
	            />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/price_layout"
        >
        <TextView 
            android:text="商品价格:"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="right|center_vertical"
            android:id="@+id/title_price"
            android:layout_centerVertical="true"
            />
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/pro_price"
            android:layout_toRightOf="@id/title_price"
            android:textSize="15dp"
            android:numeric="decimal"
            android:background="@drawable/edit_style"
            android:layout_centerVertical="true"
            android:textColor="#0000aa"
	        android:paddingLeft="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <Button 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_weight="1"
            android:id="@+id/ok"
            android:textSize="16dp"
            />
        <Button 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="近期销售"
            android:layout_weight="1"
            android:id="@+id/recent_sale"
            android:textSize="16dp"
            />
        <Button 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_weight="1"
            android:id="@+id/cancel"
            android:textSize="16dp"
            />
    </LinearLayout>
</LinearLayout>