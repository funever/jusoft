<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<TableLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:text="商品名:"
                android:layout_width="wrap_content"
	        	android:layout_height="fill_parent"
	        	android:layout_marginLeft="50dp"
	        	android:gravity="center_vertical"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_name"
                />
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:text="商品编号:"
                android:layout_width="wrap_content"
	        	android:layout_height="fill_parent"
	        	android:layout_marginLeft="50dp"
	        	android:gravity="center_vertical"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_bh"
                />
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:text="产地:"
                android:layout_width="wrap_content"
	        	android:layout_height="fill_parent"
	        	android:layout_marginLeft="50dp"
	        	android:gravity="center_vertical"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_cd"
                />
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:text="规格:"
                android:layout_width="wrap_content"
	        	android:layout_height="fill_parent"
	        	android:layout_marginLeft="50dp"
	        	android:gravity="center_vertical"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_gg"
                />
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:text="型号:"
                android:layout_width="wrap_content"
	        	android:layout_height="fill_parent"
	        	android:layout_marginLeft="50dp"
	        	android:gravity="center_vertical"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_xh"
                />
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:text="品牌:"
                android:layout_width="wrap_content"
	        	android:layout_height="fill_parent"
	        	android:layout_marginLeft="50dp"
	        	android:gravity="center_vertical"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_pp"
                />
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:text="单位:"
                android:layout_width="wrap_content"
	        	android:layout_height="fill_parent"
	        	android:layout_marginLeft="50dp"
	        	android:gravity="center_vertical"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_dw"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>