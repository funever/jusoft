<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/dialog_bg"
    >
    <TextView 
        android:background="@drawable/dialog_title_style"
        android:text="筛选条件"
        android:textColor="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textSize="17dp"
        android:gravity="center"
        android:id="@+id/title"
        />
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/all_round"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/pro_info"
        >
     <RelativeLayout 
           	android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:id="@+id/start_date"
            >
	    <TextView 
	        android:text="开始时间:"
	        android:textSize="16dp"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical"
	        android:textColor="#000000"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:id="@+id/start_date_text"
	        android:gravity="center_vertical"
	        android:textColor="#0000ff"
	        android:textSize="17dp"
	        android:layout_marginLeft="100dp"
	        />
	    <ImageView 
	    	    android:layout_width="6dip"
            	android:layout_height="12dip"
            	android:layout_alignParentRight="true"
           		android:layout_marginRight="15dip"
            	android:layout_centerVertical="true"
            	android:src="@drawable/home_index_arrow"
	    	    android:id="@+id/dhrq_add"
	    	    />
	</RelativeLayout>
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
            />
        <RelativeLayout 
           	android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:id="@+id/end_date"
            >
	    <TextView 
	        android:text="结束时间:"
	        android:textSize="16dp"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical"
	        android:textColor="#000000"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:id="@+id/end_date_text"
	        android:gravity="center_vertical"
	        android:textColor="#0000ff"
	        android:textSize="17dp"
	        android:layout_marginLeft="100dp"
	        />
	    <ImageView 
	    	    android:layout_width="6dip"
            	android:layout_height="12dip"
            	android:layout_alignParentRight="true"
           		android:layout_marginRight="15dip"
            	android:layout_centerVertical="true"
            	android:src="@drawable/home_index_arrow"
	    	    android:id="@+id/dhrq_add"
	    	    />
	</RelativeLayout>
	<TextView 
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
            />
        <RelativeLayout 
           	android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:id="@+id/end_date"
            >
	    <TextView 
	        android:text="是否显示为0行:"
	        android:textSize="16dp"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical"
	        android:textColor="#000000"
	        />
	    <CheckBox 
	    	    android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_alignParentRight="true"
           		android:layout_marginRight="15dip"
            	android:layout_centerVertical="true"
	    	    android:id="@+id/show_zero"
	    	    android:checked="true"
	    	    />
		</RelativeLayout>
        </LinearLayout>
        <Button 
            android:layout_width="fill_parent"
	        android:layout_height="38dp"
	        android:background="@drawable/all_round"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:id="@+id/submit"
	        android:text="查询"
	        android:textSize="16dp"
            />
</LinearLayout>
